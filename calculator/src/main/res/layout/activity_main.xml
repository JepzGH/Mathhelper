<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.study.mathhelper.calculator.MainActivity"
    android:background="@drawable/abc_ab_share_pack_holo_dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/abc_ab_share_pack_holo_light" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:baselineAligned="false"
        android:id="@+id/tableLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/button"
                android:clickable="true"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:onClick="numberClicked"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxHeight="70dp"
                android:maxWidth="80dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/button2"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="1"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxHeight="70dp"
                android:maxWidth="80dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/button3"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="2"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxHeight="70dp"
                android:maxWidth="80dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/button12"
                android:clickable="true"
                android:onClick="operatorClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="3"
                android:layout_gravity="top"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxHeight="70dp"
                android:maxWidth="80dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button4"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button5"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="1"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button6"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="2"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/button13"
                android:clickable="true"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="operatorClicked"
                android:layout_column="3"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button7"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button8"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="1"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button9"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="2"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/button14"
                android:clickable="true"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="operatorClicked"
                android:layout_column="3"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/button10"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/button11"
                android:clickable="true"
                android:onClick="numberClicked"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="1"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+-"
                android:id="@+id/button15"
                android:clickable="true"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="operatorClicked"
                android:layout_column="2"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/button19"
                android:clickable="true"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="operatorClicked"
                android:layout_column="2"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableRow">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/button16"
                android:clickable="true"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="operatorClicked"
                android:layout_column="0"
                android:layout_span="2"
                android:maxHeight="70dp"
                android:maxWidth="160dp"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/button17"
                android:clickable="true"
                android:onClick="operatorClicked"
                android:layout_column="2"
                android:layout_alignTop="@+id/button17"
                android:layout_alignRight="@+id/tableLayout"
                android:layout_alignEnd="@+id/tableLayout"
                android:singleLine="false"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"
                android:id="@+id/button18"
                android:clickable="true"
                android:onClick="operatorClicked"
                android:layout_column="3"
                android:layout_alignTop="@+id/button17"
                android:layout_alignRight="@+id/tableLayout"
                android:layout_alignEnd="@+id/tableLayout"
                android:singleLine="false"
                android:minWidth="50dp"
                android:minHeight="40dp"
                android:maxWidth="80dp"
                android:maxHeight="70dp"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:textSize="25dp" />

        </TableRow>

    </TableLayout>




</RelativeLayout>
